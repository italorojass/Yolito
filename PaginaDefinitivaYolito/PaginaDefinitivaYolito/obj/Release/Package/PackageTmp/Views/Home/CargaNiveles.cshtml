@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet">
@if (ViewBag.add != null)
{
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="alert alert-success">
                    <span>@ViewBag.add</span><i class="fa fa-check-square" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>

}
@if (TempData["EN"] != null)
{
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="alert alert-danger">
                    <span>@TempData["EN"]</span><i class="fa fa-times" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>

}

