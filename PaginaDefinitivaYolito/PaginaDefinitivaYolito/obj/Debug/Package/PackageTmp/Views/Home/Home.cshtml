@model IEnumerable<PaginaDefinitivaYolito.Models.Slider>
@{
    ViewBag.Title = "Home";
}
<link href="~/Content/owl-carousel/assets/js/google-code-prettify/prettify.css" rel="stylesheet" />
<link href="~/Content/owl-carousel/owl.carousel.css" rel="stylesheet" />
<link href="~/Content/owl-carousel/owl.theme.css" rel="stylesheet" />
<link href="~/Content/owl-carousel/assets/css/custom.css" rel="stylesheet" />
<link href="~/Content/owl-carousel/owl.transitions.css" rel="stylesheet" />
<style>
    #owl-demo .owl-item div {
        padding: 5px;
    }

    #owl-demo .owl-item img {
        display: block;
        width: 100%;
        height: auto;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        /*border-radius: 3px;*/
    }
</style>
<section >
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="owl-demo" class="owl-carousel ">
                    <div>
                        <img src="~/Content/Imagenes/Banners/BANNER CAMPAÑA NAVIDAD YOLITO 2016.jpg" class="img-responsive"/>
                    </div>
                    <div>
                        <img src="~/Content/Imagenes/Banners/BANNER CAMPAÑA NAVIDAD YOLITO 2016.jpg" class="img-responsive" />
                    </div>
                    <div>
                        <img src="~/Content/Imagenes/Banners/BANNER CAMPAÑA NAVIDAD YOLITO 2016.jpg" class="img-responsive" alt="Banner3" />
                    </div>

                </div>

          </div>
            <div class="col-md-4 col-md-offset-4">
                @using (Html.BeginForm("Buscador", "Home", new { ReturnUrl = ViewBag.ReturnUrl, FormMethod.Post }))
                {
                    <div class="input-group">

                        <input type="text" class="form-control" name="buscar" id="buscar" placeholder="¿Qué buscas?">
                        <span class="input-group-btn">
                            <button class="btn btn-default " type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
</section><!--/slider-->
<section >
    <div class="container ">
        <div class="row">
            <div class="col-md-12">
                <h3 class="fonts">Nuestras Marcas</h3>
            </div>
            @Html.Action("RenderMarcas")
         @*@Html.Partial("SliderMarcas")*@
            <div class="col-md-12">
                <h3 class="fonts">Buscar por categorías</h3>
            </div>
            @Html.Action("Productos", "Home")
        </div>

    </div>
</section>
<script src="~/Content/owl-carousel/assets/js/google-code-prettify/prettify.js"></script>
<script src="~/Content/owl-carousel/assets/application.js"></script>
<script src="~/Content/owl-carousel/owl.carousel.js"></script>
<script type="text/javascript" >
   
    $('#modal').hide();
    //jQuery(function () {
    //    jQuery('#modal').click();
    //});
    $('#myModal').on('shown.bs.modal', function () {
        $('#myInput').focus()
    })
   
    $(document).ready(function () {
        $('#buscar').autocomplete({
            source: '@Url.Action("Search","Home")'
        });
    })
</script>
<script>
    $(document).ready(function () {
        $("#owl-demo").owlCarousel({
            autoPlay: 3000,
            stopOnHover: true,
            navigation: true,
            paginationSpeed: 1000,
            goToFirstSpeed: 2000,
            singleItem: true,
            autoHeight: true,
            transitionStyle: "backSlide"
        });
    });
</script>