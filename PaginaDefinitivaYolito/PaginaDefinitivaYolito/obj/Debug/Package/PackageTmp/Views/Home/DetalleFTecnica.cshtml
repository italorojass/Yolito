@model IEnumerable<PaginaDefinitivaYolito.Models.FichaTecnica>

@if (Model.Count() != 0)
{
    
    <table class="table">
        <thead>
            <tr class="cart_menu">
                <td colspan="2"><h3 class="fontUpper">Ficha técnica</h3> </td>
            </tr>
            <tr>
                <th><h4>Atributo</h4> </th>
                <th><h4>Detalle</h4></th>
            </tr>
        </thead>
        
        @foreach (var tt in Model)
        {
        <tr><td>
                <strong>@tt.ItemNameAttibute </strong>
            </td>
            <td>
               @tt.ItemAttibute
            </td>
        </tr>
        }
    </table>
    
}
else
{
    <div class="alert-danger">
        Sin ficha tecnica
    </div>
}
