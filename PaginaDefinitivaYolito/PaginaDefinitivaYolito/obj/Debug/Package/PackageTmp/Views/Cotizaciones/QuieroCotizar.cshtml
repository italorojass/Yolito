@model PaginaDefinitivaYolito.Models.EmailCotizacion
@{
    ViewBag.Title = "QuieroCotizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="contact-page" class="container">
    <div class="bg">
        <div class="row">
            <div class="col-md-8 ">
                <div class="breadcrumbs">
                    @Html.Raw(MvcBreadCrumbs.BreadCrumb.Display())
                </div>
            </div>
            <div class="col-sm-12">
                <h2 class="title2 text-center">Cotiza con nosotros</h2>
            </div>
            
         </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="contact-form">
                    <h4 class="mailvendedor2 text-center">Yolito Centro Ferretero ha desarrollado para usted un sistema de envío de cotizaciones en línea para facilitar la realización de sus proyectos. Usted puede hacer los presupuestos de su obra desde la comodidad de su casa u oficina a través de este servicio disponible las 24 horas del día. </h4>
                    <br />
                    
                    @using (Html.BeginForm("EnviarCotizacion", "Cotizaciones", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(m => m.nombre_cotizante, new { @class = "form-control", @placeholder = "Nombre", @required = "required" })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(m => m.apellido_cotizante, new { @class = "form-control", @placeholder = "Apellido", @required = "required" })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(m => m.From, new { @class = "form-control", @placeholder = "Email de contacto" })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.TextBoxFor(m => m.telefono_cotizante, new { @class = "form-control", @placeholder = "Teléfono de contacto" })
                        </div>

                        <div class="form-group col-md-12">
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "Asunto" })
                        </div>
                        <div class="form-group col-md-12">
                            @Html.TextAreaFor(m => m.Body, new { @class = "form-control", @style = "width: 100%; height:150px;", @placeholder = "Escribe el detalle de los productos que necesita" })
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-block ">Enviar Cotización</button>
                        </div>
                    }
                    
                </div>
            </div>
            <br />
            <div class="col-sm-4">
                <div class="contact-info">
                    <h2 class="title2 text-center">Envianos tu cotizacion en formato word, pdf, excel.</h2>
                    <br />

                   <div class="col-md-12">
                       Nos pondremos en contacto con usted dentro de las siguientes 72 hrs.
                   </div>
                    <br />
                    <div class="col-md-12 mailvendedor">
                        <a href="mailto:ventasinternet@yolito.cl">ventasinternet@yolito.cl</a> 
                    </div>
                    
                </div>
            </div>
        </div>


