@model PaginaDefinitivaYolito.Models.UserModel
@{ Layout = null;}
<script src="js/jquery.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery.scrollUp.min.js"></script>
<script src="js/price-range.js"></script>
<script src="js/jquery.prettyPhoto.js"></script>
<script src="js/main.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<section>
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-form">
                    <!--login form-->
                    <h2 class="title2 text-center ">Inicia con tu cuenta</h2>
                    @using (Html.BeginForm("LogIn", "Usuarios", new { ReturnUrl = ViewBag.ReturnUrl, FormMethod.Post }))
                    {
                        Html.ValidationSummary(true, "Ocurrio un error al iniciar sesión");
                        @Html.TextBoxFor(u => u.rut, new { @class = "largo ", @placeholder = "Rut sin guión y digito verificador" })
                        @Html.PasswordFor(u => u.password, new { @class = "largo", @placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(u => u.password)

                        <button type="submit" class="btn btn-default">Iniciar sesión</button> <br />
                        <p>No poseo una cuenta, deseo <a href="@Url.Action("Registration", "Usuarios")">Registrarme</a></p>

                    }

                </div><!--/login form-->
            </div>
            @*<div class="col-sm-1">
                    <h2 class="or">O</h2>
                </div>
                <div class="col-sm-4">
                    <div class="signup-form">
                        <!--sign up form-->
                        <h2>Registrate!</h2>
                        @{Html.RenderAction("Registration", "Usuarios");}

                    </div><!--/sign up form-->
                </div>*@
        </div>
    </div>
</section><!--/form-->
