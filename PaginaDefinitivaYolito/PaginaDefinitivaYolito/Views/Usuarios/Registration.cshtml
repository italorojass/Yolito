@model PaginaDefinitivaYolito.Models.DatosPersonalesModel

@{
    ViewBag.Title = "Registrate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#news_date").datepicker({ dateFormat: 'dd/mm/yy' });
    });
</script>
<script>
    $(document).ready(function () {
        if ('@ViewBag.Message' == 'Registrado') {
            alert('Registrado con exito!.');
        }
    });
</script>

<section>
    <div class="container">
        <div class="row">
            
            <div class="col-md-4 pull-right buscador">
                @using (Html.BeginForm("Buscador", "Home", new { ReturnUrl = ViewBag.ReturnUrl, FormMethod.Get }))
                {
                    <div class="input-group">
                        <input type="text" class="form-control" name="buscar" id="buscar" placeholder="¿Que buscas?">
                        <span class="input-group-btn">
                            <button class="btn btn-default " type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </span>
                    </div>
                }
                <p id="empty-message" style="color:#ff0000;">

                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 ">
                <div class="breadcrumbs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="@Url.Action("Home", "Home")">Home</a>
                        </li>
                        <li class="active">
                            Registrate
                        </li>
                    </ol>
                </div>
            </div>
           
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="divlines">

                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-12 signup-form">
               
            </div>
            <div class="col-md-12">
                @if (ViewBag.existes == "Ya existes en nuestra base de datos")
                {
                    <div class="alert alert-danger">
                        @ViewBag.existes
                    </div>
                }
                @if (ViewBag.Message == "Registrado")
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }
            </div>

            <div class="col-md-12 " >
                @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-error alert-danger text-center">
        <i class="fa fa-times" aria-hidden="true"></i>
        @Html.ValidationSummary(true)
    </div>
}
                @Html.AntiForgeryToken()
                
            </div>
            <div class="col-md-4 col-md-offset-4">
                <h2 class="title2 text-center">Datos personales:</h2>
            </div>
            
@using (Ajax.BeginForm("Registration", "Usuarios", new AjaxOptions()
                            {
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "rresult"
                            }, FormMethod.Post))
{
    <div class="col-md-6">
        <div class="signup-form">
            <label>Rut</label>
            @Html.TextBoxFor(model => model.rut, new {@class = "form-control", @placeholder = "Ejemplo: 11222333-6", @oninput = "checkRut(this)", @required  = "required"  })
            @*@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {
                <div class="alert alert-danger">
                    <i class="fa fa-times" aria-hidden="true"></i>
                    @Html.ValidationMessageFor(model => model.rut)
                </div>
            }*@
            
            
            <label>Nombre</label>
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Ejemplo: Jose" , @required  = "required"})
            
            
            
            <label>Apellido</label>
            @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", @placeholder = "Ejemplo: Yolito " , @required  = "required"})
@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
