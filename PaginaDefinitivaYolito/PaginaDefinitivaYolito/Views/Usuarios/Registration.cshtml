        @Html.ValidationMessageFor(model => model.Apellido)
    </div>
}  
            <label>Email</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Ejemplo@correo.cl", @required  = "required" })
@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {
    <div class="alert alert-danger">
        <i class="fa fa-times" aria-hidden="true"></i>
        @Html.ValidationMessageFor(model => model.Email)
    </div>
            }

            <label>Dirección</label>
            @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control", @placeholder = "Ejemplo: Av Las Condes 1280 dpto 201" , @required  = "required"})

        </div>
    </div>
    <div class="col-md-6">
        <div class="signup-form">
            <label>Comuna</label>
            @Html.TextBoxFor(model => model.Comuna, new { @class = "form-control", @placeholder = "Ejemplo: Las Condes" , @required  = "required"})

            <label>Telefono de contacto 1</label>
            @Html.TextBoxFor(model => model.TelFijo, new { @class = "form-control", @placeholder = "Ejemplo: 227500600", @required  = "required" })
@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger">
        <i class="fa fa-times" aria-hidden="true"></i>
        @Html.ValidationMessageFor(model => model.TelFijo)
    </div>
}
            
            
            <label>Telefono de contacto 2</label>
            @Html.TextBoxFor(model => model.TelMovil, new { @class = "form-control", @placeholder = "Ejemplo: 954127325" })

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger">
        <i class="fa fa-times" aria-hidden="true"></i>
        @Html.ValidationMessageFor(model => model.TelMovil)
    </div>
}
            
            
            <label>Contraseña(Minimo 6 caractares)</label>
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "*******" , @required  = "required"})

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger">
        <i class="fa fa-times" aria-hidden="true"></i>
        @Html.ValidationMessageFor(model => model.Password)
    </div>
}
            
            <label>Confirma tu contraseña</label>
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "*******" , @required  = "required"})

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {
    <div class="alert alert-danger">
        <i class="fa fa-times" aria-hidden="true"></i>
        @Html.ValidationMessageFor(model => model.ConfirmPassword)
    </div>
            }
            
            
        </div>
        </div>
        
    
    <div class="col-md-12">
        <br />
        <div class="login-form">
            <button type="submit" class="btn btn-primary btn-block" ><i class="fa fa-user-plus" aria-hidden="true" style="margin-right:15px;"></i>Registrarme</button>
        </div>
        
    </div>
    
    
}
