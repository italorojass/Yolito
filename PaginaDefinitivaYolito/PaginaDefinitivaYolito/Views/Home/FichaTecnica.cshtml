                        {
                            foreach (var n1 in ViewBag.nivel1)
                            {
                                
                                <li> <a href="@Url.Action("Categoria1", "Home", new { id = n1.ICat1, nombre = n1.Name})">@n1.Name</a> </li>
                            }

                        }
                        @if (ViewBag.Nivel2 != null)
                        {
                            foreach (var n2 in ViewBag.Nivel2)
                            {
                                
