    function isFloat(myNum) {
        // es true si es 1, osea si es flotante
        var myMod = myNum % 1;

        if (myMod == 0)
        {
            return false;
        }
        else
        {
            return true;
        }
    }

    

    function imgError(image) {
        image.onerror = "";
        image.src = '@Url.Content("~/Content/Imagenes/Sitio/MARCA-DE-AGUA-YOLITO.jpg")';
        return true;
    }
</script>


