    <h2>
        <span style="font-size:20px; ">
            $
        </span>
        @string.Format(new System.Globalization.CultureInfo("es-CL"), "{0:#,##}", Math.Floor(Convert.ToDecimal(item.Price)))  <span style="font-size:20px; ">C/U</span>

