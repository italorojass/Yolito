@model IEnumerable<PaginaDefinitivaYolito.Models.Productos>
@{
    ViewBag.Title = "FichaTecnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
    long refid = 0;
    string itemId = string.Empty;
    string ConfigId = string.Empty;
