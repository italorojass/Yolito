            }
            else
            {
                @*Precio C/U*@
                        
                <h1> <span style="font-size:20px; ">$</span> @string.Format(new System.Globalization.CultureInfo("es-CL"), "{0:#,##}", Math.Floor(Convert.ToDecimal(ViewBag.valorCaja)))  <span style="font-size:20px; ">C/U</span>  </h1><br />
            }
            @*Precio MT2*@
