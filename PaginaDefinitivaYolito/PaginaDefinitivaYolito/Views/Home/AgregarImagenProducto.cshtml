@{
    ViewBag.Title = "AgregarImagenProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        @if (ViewBag.yaexiste != null)
        {
            <div class="col-md-4 col-md-offset-4">
                <div class="alert alert-danger">
                    @ViewBag.yaexiste<i class="fa fa-times-circle fa-2x" aria-hidden="true"></i>
                </div>
            </div>
        }
        @if (ViewBag.Uploaded != null)
        {
            <div class="col-md-4 col-md-offset-4">
                <div class="alert alert-success">
                    <p>@ViewBag.Uploaded </p>
                    @ViewBag.nombreImg
                    <i class="fa fa-check-circle fa-2x" aria-hidden="true"></i>
                </div>
            </div>
        }
        @if (ViewBag.error != null)
        {
            <div class="col-md-4 col-md-offset-4">
                <div class="alert alert-danger">
                    @ViewBag.error <i class="fa fa-times-circle fa-2x" aria-hidden="true"></i>
                </div>
            </div>
        }
        <div class="col-md-4 col-md-offset-4">
            <h2 class="title2">Agregar imagenes a productos</h2>
            
            @using (Html.BeginForm("AgregarImagenProducto", "Home", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
            {
               
                <fieldset>
                    <label>Código de autorización</label>
                    <input type="password" name="codigo" class="form-control" placeholder="Código"/>
                    <div class="editor-field">
                        @Html.TextBox("file", "", new { type = "file" })
                    </div>
                    <br />
                    <div class="editor-field">
                        <button type="submit" class="btn btn-primary btn-block">Subir</button>
                       
                    </div>
                </fieldset>
            }
        </div>
       
    </div>
</div>
<script>
    $(document).ready(function(){
        alert(@ViewBag.Uploaded + "</br>Imagen:"+ @ViewBag.NombreImagen);
    })
</script>

