
@{
    ViewBag.Title = "Despacho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#formReceptor').hide();
        $('#formDespacho').hide();
        
        $('#Radio').change(function () {
            $('#formDespacho').show();
            $('#formReceptor').hide();
        });

        $('#Radio1').change(function () {
            $('#formReceptor').show();
            $('#formDespacho').hide();
        });
        
    });
    
</script>


