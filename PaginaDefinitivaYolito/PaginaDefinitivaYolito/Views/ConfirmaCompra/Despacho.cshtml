<script type="text/javascript">

    function checkForm(form)
    {
        
        if(!form.terms.checked) {
            alert("Porfavor indica que tu aceptas los Terminos y Condiciones");
            form.terms.focus();
            return false;
        }
        return true;
    }

</script>
